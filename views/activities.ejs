<!DOCTYPE html>
<html>
<head>
    <title>Strava Activities</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px 12px;
            border: 1px solid #ccc;
            text-align: left;
        }
        .refresh-btn {
            margin-bottom: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        .refresh-btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>My Strava Activities</h1>
    <form action="/refresh-activities" method="get">
        <button type="submit" class="refresh-btn">Refresh Activities</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Distance (m)</th>
                <th>Moving Time (s)</th>
                <th>Elapsed Time (s)</th>
                <th>Elevation Gain (m)</th>
                <th>Start Date</th>
            </tr>
        </thead>
        <tbody>
            <% activities.forEach(function(activity) { %>
                <tr>
                    <td><%= activity.name %></td>
                    <td><%= activity.type %></td>
                    <td><%= activity.distance %></td>
                    <td><%= activity.moving_time %></td>
                    <td><%= activity.elapsed_time %></td>
                    <td><%= activity.total_elevation_gain %></td>
                    <td><%= new Date(activity.start_date).toLocaleString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
